Top 5 States and Others Count = 
VAR TopStatesTable = 
    TOPN(
        5,
        SUMMARIZE(
            ALLSELECTED('BVBT Portfolio'),
            'BVBT Portfolio'[State],
            "StateCount", COUNT('BVBT Portfolio'[State])
        ),
        [StateCount],
        DESC
    )

VAR TopStatesList = 
    SELECTCOLUMNS(TopStatesTable, "State", 'BVBT Portfolio'[State])

VAR OtherStatesCount = 
    CALCULATE(
        COUNT('BVBT Portfolio'[State]),
        ALLSELECTED('BVBT Portfolio'),
        NOT('BVBT Portfolio'[State] IN TopStatesList)
    )

VAR CurrentState = SELECTEDVALUE('Pseudo States Table'[State])

RETURN
IF(
    CurrentState <> "Others",
    CALCULATE(
        COUNT('BVBT Portfolio'[State]),
        FILTER(
            ALLSELECTED('BVBT Portfolio'),
            'BVBT Portfolio'[State] = CurrentState
        )
    ),
    OtherStatesCount
)
